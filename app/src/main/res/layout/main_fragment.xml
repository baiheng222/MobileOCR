<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/iv_left_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/main_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#4d4d4d"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/separator0"
        android:layout_below="@id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/separator0"
        android:background="#f7f7f7"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_auto"
            android:layout_width="173dp"
            android:layout_height="173dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@mipmap/quick_reco"

            />

        <TextView
            android:id="@+id/tv_auto"
            android:background="#f7f7f7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_auto"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:text="@string/main_autorec"/>

        <ImageView
            android:id="@+id/iv_exact"
            android:layout_width="173dp"
            android:layout_height="173dp"
            android:layout_below="@id/tv_auto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@mipmap/exact_reco"

            />


        <TextView
            android:id="@+id/tv_exact"
            android:background="#f7f7f7"
            android:layout_below="@id/iv_exact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:text="@string/main_exactrec"/>

    </RelativeLayout>
</RelativeLayout>
