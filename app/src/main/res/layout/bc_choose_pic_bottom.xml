<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:id="@+id/wb_acbar_photoId"
    android:background="@color/wboard_folder_manage_color"
    android:orientation="horizontal">
    <TextView 
        android:id="@+id/bc_bottom_preview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="预览"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_centerVertical="true"
        android:gravity="center"/>
    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	    	android:layout_alignParentRight="true"
	    	android:layout_alignParentEnd="true"
	    	android:layout_marginRight="18dp"
	    	android:layout_marginEnd="18dp"
	    	android:layout_centerVertical="true">
	        <TextView  
		        android:id="@+id/bc_photo_select_count"  
		        android:layout_width="25dp"  
		        android:layout_height="25dp"  
		        android:background="@mipmap/wb_seq"
		        android:textColor="@color/white"
		        android:gravity="center"
		        android:text="5"
		        android:layout_marginRight="2dp"
		        android:visibility="invisible"
	   			/>
		    <TextView 
		        android:id="@+id/bc_bottom_confirm"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="@string/bc_str_confirm"
		        android:textSize="17sp"
		        android:textColor="@color/white"
		        android:gravity="center"
		        />
	    </LinearLayout>
</RelativeLayout>