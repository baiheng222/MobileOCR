<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical" >

    <include layout="@layout/modify_name_title" />

    <TextView
        android:id="@+id/name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dip"
        android:layout_marginLeft="10dip"
        android:text="@string/contacts_name"
        android:textSize="15sp"
        android:textColor="#BCBCBC" />

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_edit"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">
        <com.hanvon.rc.utils.ClearEditText
            android:id="@+id/evalprice_editname"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:background="@color/white"
            android:hint="@string/contacts_name"
            android:singleLine="true"
            android:drawableRight="@mipmap/edit_clear"
            android:maxLength="32"
            android:textColor="#D7D7D7"
            android:textColorHint="#D7D7D7"
            android:textSize="15sp"
            android:imeOptions="actionNext" >
        </com.hanvon.rc.utils.ClearEditText>
    </LinearLayout>

    <TextView
        android:id="@+id/phone_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_name"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dip"
        android:text="@string/contacts_phone"
        android:textSize="15sp"
        android:textColor="#BCBCBC" />

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_edit"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">
        <com.hanvon.rc.utils.ClearEditText
            android:id="@+id/evalprice_editphone"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:background="@color/white"
            android:hint="@string/contacts_phone"
            android:singleLine="true"
            android:drawableRight="@mipmap/edit_clear"
            android:inputType="phone"
            android:textColor="#D7D7D7"
            android:textColorHint="#D7D7D7"
            android:textSize="15sp"
            android:imeOptions="actionDone" >
        </com.hanvon.rc.utils.ClearEditText>
    </LinearLayout>

    <TextView
        android:id="@+id/evalprice_editsure"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:layout_below="@+id/ll_phone"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#5A9B4F"
        android:text="确定"
        android:textSize="15sp"
        android:textColor="@color/white"/>
</RelativeLayout>